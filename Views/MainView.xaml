<UserControl x:Class="PathwayDevTool.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PathwayDevTool.Views"
             xmlns:conv="clr-namespace:PathwayDevTool.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:RunStopTextConverter x:Key="RunStopTextConverter"/>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:ServiceButtonEnabledConverter x:Key="ServiceButtonEnabledConverter"/>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TabControl -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Tab Services -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  Text="📋 Services" VerticalAlignment="Center" Foreground="#2196F3"/>
                        <Border Background="#2196F3"
                                CornerRadius="10"
                                Padding="6,2"
                                Margin="8,0,0,0">
                            <TextBlock Text="{Binding StoppedServicesView.Count}"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>

                <DataGrid ItemsSource="{Binding StoppedServicesView}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Service" Binding="{Binding Name}" Width="650">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Action" Width="140">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Center">
                                        <Button Command="{Binding DataContext.ToggleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Width="100"
                                            IsEnabled="{Binding IsStarting, Converter={StaticResource InverseBoolConverter}}">

                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="⏳" 
                                                       FontSize="14" 
                                                       Margin="0,0,6,0"
                                                       Visibility="{Binding IsStarting, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                                <TextBlock VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Run"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsStarting}" Value="True">
                                                                    <Setter Property="Text" Value="Starting..."/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                                    <Setter Property="Text" Value="Stop"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Tab Running -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏗 Running" VerticalAlignment="Center" Foreground="#4CAF50"/>
                        <Border Background="#4CAF50"
                                CornerRadius="10"
                                Padding="6,2"
                                Margin="8,0,0,0">
                            <TextBlock Text="{Binding RunningServicesView.Count}"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>

                <DataGrid ItemsSource="{Binding RunningServicesView}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True" 
                          SelectionMode="Extended"
                            SelectionUnit="Cell">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Service" Binding="{Binding Name}" Width="400">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="ProcessID" Binding="{Binding ProcessId}" Width="150">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Action" Width="250">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Button ShowConsole -->
                                        <Button MinWidth="110" Margin="0,0,12,0"
                                                Command="{Binding DataContext.ShowConsoleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
                                                    <Setter Property="Content" Value="Show Console"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsConsoleVisible}" Value="True">
                                                            <Setter Property="Content" Value="Hide Console"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <!-- End Button ShowConsole -->
                                        <!-- Button Stop -->
                                        <Button Content="Stop"
                                            Command="{Binding DataContext.ToggleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            MinWidth="60"/>
                                        <!-- End Button Stop -->
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>