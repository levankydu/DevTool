<Window x:Class="PathwayDevTool.Views.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathwayDevTool.Views"
        mc:Ignorable="d"
        ResizeMode="CanResizeWithGrip"
        Title="ConsoleWindow" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Service: " 
               FontSize="13" 
               FontWeight="Bold"
               Foreground="#FF6B6B"/>
            <TextBlock Text="{Binding Name}" 
               FontSize="13" 
               FontWeight="Bold"
               Foreground="#FF6B6B"
               Margin="6,0,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="#0D0D0D" 
                BorderBrush="#333" 
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Name="ScrollViewer">
                <TextBox Text="{Binding ConsoleOutput, Mode=OneWay}"
                         IsReadOnly="True"
                         Padding="12"
                         FontFamily="Consolas"
                         FontSize="12"
                         Foreground="#0DFF00"
                         Background="#0D0D0D"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         Name="LogTextBlock"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
